<h1>Create new Page</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@page) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :html %>
      <%= f.text_field :html %>

      <%= f.hidden_field :topic_id, :value => params[:topic_id] %>

      <%= f.submit "Create Page", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
